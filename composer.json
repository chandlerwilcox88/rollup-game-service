{
    "name": "openluxe/rollup-game-service",
    "description": "Provably fair multiplayer dice game microservice for OpenLuxe platform.",
    "keywords": ["provably-fair", "dice-game", "microservice", "openluxe", "gaming"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Chandler Wilcox",
            "email": "chandler@openluxe.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/lumen-framework": "^10.0",
        "predis/predis": "^3.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.4.4",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-laravel": "^2.4",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
