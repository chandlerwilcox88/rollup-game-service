APP_NAME="Roll Up Game Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_SLACK_WEBHOOK_URL=

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=rollup
DB_USERNAME=herd
DB_PASSWORD=

# Redis (optional - only needed if using Redis for cache/queue)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# Cache & Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# API Authentication
API_KEY_OPENLUXE=generate_secure_api_key_here

# CORS (for OpenLuxe integration)
# Local: Use localhost and .test domains
# Production: Use production domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://openluxe.test,https://openluxe.co,https://www.openluxe.co

# Rate Limiting
API_RATE_LIMIT=60
